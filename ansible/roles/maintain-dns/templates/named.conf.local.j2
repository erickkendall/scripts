{% for item in bind_forward_zones  %}
zone "{{item}}." IN {
   type master;
   file "/etc/bind/db.{{item}}";
};
{% endfor %}

{% for item in bind_reverse_zones  %}
zone "{{ item }}." IN {
   type master;
   file "/etc/bind/db.{{ item }}";
};
{% endfor %}

